{
    "name": "Laravel Docker Dev",
    "dockerComposeFile": ["docker-compose.yml"],
    "service": "php",
    "workspaceFolder": "/var/www",
    "forwardPorts": [8000],
    "postCreateCommand": "composer install && php artisan key:generate && chmod -R 775 storage bootstrap/cache",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "xdebug.php-debug",
                "onecentlin.laravel-blade",
                "bmewburn.vscode-intelephense-client"
            ]
        }
    }
}
